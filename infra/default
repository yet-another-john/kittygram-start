server {
    server_name 51.250.28.159 taski.servebeer.com;

    location /sentry-debug/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
    }
    
    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/taski.servebeer.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/taski.servebeer.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}

server {
    if ($host = taski.servebeer.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name taski.servebeer.com;
    return 404; # managed by Certbot

}

server {
    server_name 51.250.28.159 kittygram-yandex.hopto.org;

    location /media/ {
        alias /var/www/kittygram/media/;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8080;
	client_max_body_size 20M;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8080;
	client_max_body_size 20M;
    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/taski.servebeer.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/taski.servebeer.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = kittygram-yandex.hopto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name kittygram-yandex.hopto.org;
    return 404; # managed by Certbot

}

